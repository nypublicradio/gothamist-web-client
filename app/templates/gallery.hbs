{{set-body-class "gallery"}}
<DoTargeting key='Template' value='Article Gallery' />
<NyprOGalleryOverlay
  @title={{parentArticle.title}}
  @parentRoute={{array 'article' parentArticle.section.slug parentArticle.path}}
  @slides={{slides}}
  @viewedSlide={{action viewedSlide}}
  @slideForInit={{image}}
  @share={{shareMetadata}}
  @breakM={{600}}
  @breakL={{1000}}
  as |index gallery|>
  {{!-- Ads after every 6th slide, and the 3rd slide --}}
  {{#if (or
    (eq (mod index 6) 5)
    (eq index 2)
  )}}
    <gallery.billboard>
      <AdTagWide @slot="gothamist/interior/midpage/gallery"
      @showLabel={{true}} />
    </gallery.billboard>
  {{/if}}
</NyprOGalleryOverlay>
