{{set-body-class "gallery"}}
<DoTargeting key='Template' value='Article Gallery' />
<NyprOGalleryOverlay
  @title={{model.title}}
  @parentRoute={{array 'article' model.permalink}}
  @slides={{model.gallery.slides}}
  @viewedSlide={{action this.viewedSlide}}
  @slideForInit={{this.image}}
  @share={{this.shareMetadata}}
  as |index gallery|>
  {{!-- every 3rd image --}}
  {{#if (eq (mod index 3) 2)}}
    <gallery.billboard>
      <AdTagWide @slot="gothamist/interior/midpage/2" />
    </gallery.billboard>
  {{/if}}
</NyprOGalleryOverlay>