{{set-body-class "gallery"}}
<DoTargeting key='Template' value='Article Gallery' />
<NyprOGalleryOverlay
  @title={{model.title}}
  @parentRoute={{array 'article' model.path}}
  @slides={{model.gallery.slides}}
  @viewedSlide={{action this.viewedSlide}}
  @slideForInit={{this.image}}
  @share={{this.shareMetadata}}
  as |index gallery|>
  {{!-- 1 ad every 3 photos --}}
  {{#if (eq (mod index 3) 2)}}
    {{!-- No more than 2 inline ads on one page --}}
    {{#if (lt index 6)}}
      <gallery.billboard>
        <AdTagWide @slot="gothamist/interior/midpage/gallery" />
      </gallery.billboard>
    {{/if}}
  {{/if}}
</NyprOGalleryOverlay>