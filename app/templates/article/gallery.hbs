<NyprOGalleryOverlay
  @title={{model.title}}
  @parentRoute='article'
  @parentModel={{model}}
  @slides={{model.gallery.slides}}
  @viewedSlide={{action this.viewedSlide}}
  @activeSlide={{this.image}}
  as |index gallery|>
  {{#if (eq index 1)}}
    <gallery.billboard>
      billboard goes here
    </gallery.billboard>
  {{/if}}
</NyprOGalleryOverlay>
