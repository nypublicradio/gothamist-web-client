<NyprMBlock @orientation={{@orientation}} @size={{@size}} data-test-block={{@article.id}} as |block|>
  <block.media
    @route={{array 'article' @article.path}}
    @srcS={{this.thumbnail.srcS}}
    @srcSet={{this.thumbnail.srcSet}}
    @breakM={{this.thumbnailBreakpoint}}
    @srcM={{this.thumbnail.srcM}}
    @alt=""
    @ariaLabel={{@article.title}}
  />

  <block.object as |o|>
    {{#if (and @article.section.label (not @hideEyebrow))}}
      {{#if @article.isSponsored}}
        <o.eyebrow @kickerClass="o-kicker--sponsored" @text="Sponsored"/>
      {{else}}
        <o.eyebrow
          @route={{array 'sections' @article.section.basename}}
          @text={{@article.section.label}}/>
      {{/if}}
    {{/if}}

    <o.title
      @h3
      @route={{array 'article' @article.path}}
      @hasGallery={{@article.hasGallery}}
      @hasVideo={{@article.hasVideo}}
      @hasAudio={{@article.hasAudio}}
    >
      {{{@article.title}}}
    </o.title>

    <o.body as |body|>
      {{#unless @hideExcerpt}}
        <body.text>
          {{{@article.description}}}
        </body.text>
      {{/unless}}

      <body.meta
        @author={{if showAuthor @article.authorNickname}}
        @timestamp={{if showTimestamp (timestamp @article.publishedMoment)}}
        @commentCount={{if showCommentCount @article.commentCount}}
        @commentRoute={{array 'article' @article.path (hash isQueryParams=true values=(hash to=commentsAnchor))}}
        data-test-article-block-meta
      />
    </o.body>
  </block.object>
</NyprMBlock>
