<NyprOBlockListGroup as |blg|>
  <blg.col1>
    <NyprMBlockList @items={{@articles}} as |article|>
      <ArticleBlock
        @article={{article}}
        @orientation={{if article.hasMain 'v' 'h'}}
        @thumbnailSize={{if article.hasMain (array 640 0) (array 100 100 true)}}
        @mediumThumbnailSize={{if article.hasMain (array 640 0) (array 150 150 true)}}
      />
    </NyprMBlockList>
  </blg.col1>
  {{#if @ad}}
    <blg.col2 as |col|>
      <col.ad>
        <AdTagTall @slot={{@ad}} />
      </col.ad>
    </blg.col2>
  {{/if}}
</NyprOBlockListGroup>