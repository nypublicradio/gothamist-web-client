{{#if (get-route-params @news.link)}}
  <NyprMTextBanner
    @route={{get-route-params @news.link}}
    @title={{@news.title}}
    @timestamp={{timestamp @news.startTime}}
    @description={{@news.description}}
  />
{{else}}
  <NyprMTextBanner
    @url={{@news.link}}
    @title={{@news.title}}
    @timestamp={{timestamp @news.startTime}}
    @description={{@news.description}}
  />
{{/if}}